<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/styleCourseAdd.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"
        integrity="sha512-RNLkV3d+aLtfcpEyFG8jRbnWHxUqVZozacROI4J2F1sTaDqo1dPQYs01OMi1t1w9Y2FdbSCDSQ2ZVdAC8bzgAg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
        integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body onload="">
    <div class="overlay" onclick="off()"></div>
    <header class="text-center" id="courseAddHeader">
        <div>
            <img src="https://vit.ac.in/files/gravitas19/images/vit_white.png" id="courseAddHeaderLogo" alt="">
        </div>
        <div class="topright">
            <a href="" style="text-decoration: none; color:#fff">
                <img src="https://cdn-icons-png.flaticon.com/128/3237/3237472.png" width="40" height="40" alt="">
                {{user.facultyName}}
            </a>
        </div>
    </header>
    <div class="containerMain">
        <a href="#" class="toggleBox">
            <span class="icon"></span>
        </a>
        <ul class="navItems">
            <li>
                <a href="/admin-home">
                    <i class="fa fa-home" style="--i:1"></i>
                    <span style="--g:1">home</span>
                </a>
            </li>
            <li>
                <a href="/course-add-form">
                    <i class="fa fa-user" style="--i:2"></i>
                    <span style="--g:2">Add course</span>
                </a>
            </li>
            <li>
                <a href="/reports-view">
                    <i class="fa fa-folder" style="--i:3"></i>
                    <span style="--g:3">reports</span>
                </a>
            </li>
            <li>
                <a href="/admin-password-change">
                    <i class="fa-solid fa-file-circle-check" style="--i:4"></i>
                    <span style="--g:4">Database management</span>
                </a>
            </li>
            <li>
                <a href="/admin-shedule-view">
                    <i class="fa-solid fa-calendar-days" style="--i:5"></i>
                    <span style="--g:5">shedule</span>
                </a>
            </li>
            <li>
                <a href="/admin-shedule-booking">
                    <i class="fa-solid fa-calendar-days" style="--i:6"></i>
                    <span style="--g:6">shedule Booking</span>
                </a>
            </li>
            <li>
                <a href="/logout">
                    <i class="fa fa-globe" style="--i:7"></i>
                    <span style="--g:7">logout</span>
                </a>
            </li>
        </ul>
    </div>

    {{#if courseExist}}
    <div class="w-100 pt-2 upperSection" style="display: flex; justify-content:center;">
        <div class="alert alert-danger" style="length:50px; width: 500px;" role="alert">
            This Course is Already added!
        </div>
    </div>
    {{/if}}
    {{#if courseNotExist}}
    <div class="w-100 pt-2 upperSection" style="display: flex; justify-content:center;">
        <div class="alert alert-success" style="length:50px; width: 500px;" role="alert">
            Course added successfully
        </div>
    </div>
    {{/if}}
    <section class="upperSection" style="display: flex; justify-content:center;">
        <div class="courseAddForm m-4 p-3 text-white">
            <form action="/course-add-form" method="post">
                <div class="row m-3">
                    <div class="col">
                        <label for="idCourseName" class="m-1">Course Name</label>
                        <input type="text" class="form-control" name="courseName" id="idCourseName" placeholder=""
                            required>
                    </div>
                    <div class="col">
                        <label for="idCourseId" class="m-1">Course ID</label>
                        <input type="text" class="form-control" name="courseId" id="idCourseId" placeholder="" required>
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-6">
                        <label for="idsemester" class="m-1">Semester</label>
                        <select class="form-select" name="semester" id="idsemester" required="required">
                            <option value="" selected>Choose...</option>
                            <option value="1">Semester 1</option>
                            <option value="2">Semester 2</option>
                            <option value="3">Semester 3</option>
                            <option value="4">Semester 4</option>
                            <option value="5">Semester 5</option>
                            <option value="6">Semester 6</option>
                            <option value="7">Semester 7</option>
                            <option value="8">Semester 8</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="idFacultyName" class="m-1">Faculty Name</label>
                        <select class="form-select" name="facultyName" id="idFacultyName" required="required">
                            <option value="" selected>Choose...</option>
                            {{#each facultyList}}
                            <option value="{{this.value}}">{{this.display}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="row m-3 ">
                    <div class="col-md-6">
                        <label for="idDegree" class="m-1">Degree</label>
                        <input type="text" class="form-control" name="degree" id="idDegree" placeholder="" required>
                    </div>
                    <div class="col-md-6">
                        <label for="idCredits" class="m-1">Credits</label>
                        <input type="number" class="form-control" name="credits" onchange="autoTargetDuration()"
                            id="idCredits" placeholder="The value must be a number" required>
                    </div>
                </div>
                <div class="row m-3">
                    <div class="col-md-4">
                        <label for="idDurationTarget" class="m-1">Duration Target</label>
                        <input type="number" name="durationTarget" class="form-control" id="idDurationTarget"
                            placeholder="Interger Value" required>
                    </div>
                    <div class="col-md-8">
                        <label for="idEditor" class="m-1">Editor Name</label>
                        <!--<input type="text" name="editorName" class="form-control" id="idEditor" required>-->
                        <select class="form-select" name="editorName" id="idEditor" required="required">
                            <option value="" selected>Choose...</option>
                            {{#each editorsList}}
                            <option value="{{this.value}}">{{this.display}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>

                <div class="row m-3">
                    <div class="col-md-4">
                        <label for="idCourseCategory" class="m-1">Course Category</label>
                        <select class="form-select" name="courseCategory" id="idCourseCategory" required="required">
                            <option value="" selected>Choose...</option>
                            <option value="Online Degree">Online Degree</option>
                            <option value="Certification Course">Certification Course</option>
                            <option value="Non-Graded">Non-Graded</option>
                            <option value="Swayam/NPTEL">Swayam/NPTEL</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-12 text-center mt-5">
                    <button type="submit" class="btn text-white glow-on-hover"
                        id="submitButtonCourseAddForm">SUBMIT</button>
                </div>
            </form>
        </div>
    </section>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
        integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
        integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
        crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $('form').submit(function (ev) {
            ev.preventDefault();

            Swal.fire({
                title: 'Are you sure?',
                text: "You want to submit?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Submit'
            }).then((result) => {
                if (result.isConfirmed) {
                    //Swal.fire({
                    //    icon: 'success',
                    //    title: 'Your form has been Submitted',
                    //    showConfirmButton: false,
                    //   timer: 2000
                    $(this).unbind('submit').submit()
                }//).then((response) => {
                //  $(this).unbind('submit').submit()
                //})
            })
        })
        var toggleClick = document.querySelector(".toggleBox");
        var containerMain = document.querySelector(".containerMain");
        var overlayScreen = document.querySelector(".overlay");

        toggleClick.addEventListener('click', () => {
            toggleClick.classList.toggle('active');
            overlayScreen.classList.toggle('active');
            containerMain.classList.toggle('active');
        })

        function off() {
            toggleClick.classList.toggle('active');
            overlayScreen.classList.toggle('active');
            containerMain.classList.toggle('active');
        }

        function showPopUp(a, b) {
            if (a) {
                Swal.fire(
                    'Could not Add',
                    'This Course is Already added!',
                    'error'
                )
            }
            if (b) {
                Swal.fire(
                    'Added',
                    'Course added successfully',
                    'success'
                )
            }
        }

        function autoTargetDuration() {
            let credits = document.getElementById("idCredits").value
            let d = 300
            if (parseInt(credits) <= 8) {
                let duration = document.getElementById("idDurationTarget")
                duration.value = parseInt(credits) * 300
            }
        }


    </script>



</body>

</html>